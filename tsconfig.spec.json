/* To learn more about the testing tsconfig.json file: https://angular.io/guide/workspace-config#testing-tsconfigjson */
{
  "extends": "../tsconfig.json", // Kế thừa cấu hình từ tsconfig.json gốc
  "compilerOptions": {
    "outDir": "../out-tsc/spec",
    "types": [
      "jasmine", // **Cần thiết** để trình biên dịch nhận diện 'describe', 'beforeEach', 'it', 'expect'
      "node" // Có thể cần nếu các bài kiểm thử của bạn sử dụng các global của Node.js
    ]
  },
  "files": [
    "test.ts", // Tệp thiết lập kiểm thử chính của Angular
    "polyfills.ts" // Các polyfill có thể cần cho môi trường kiểm thử
  ],
  "include": [
    "**/*.spec.ts", // Bao gồm tất cả các tệp kiểm thử (*.spec.ts)
    "**/*.d.ts"
  ]
}
