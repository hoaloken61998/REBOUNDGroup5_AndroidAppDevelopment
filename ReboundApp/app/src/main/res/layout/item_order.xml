<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp"
    android:backgroundTint="@android:color/white">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Trạng thái đơn hàng -->
        <TextView
            android:id="@+id/txtOrderStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="To Receive"
            android:textSize="14sp"
            android:fontFamily="@font/montserrat_medium"
            android:textColor="@color/accent_dark"
            android:layout_marginBottom="8dp" />

        <!-- Danh sách sản phẩm -->
        <LinearLayout
            android:id="@+id/layoutOrderItems"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Tổng tiền -->
        <TextView
            android:id="@+id/txtOrderItemTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="8dp"
            android:text="Total: 330.000 VND"
            android:fontFamily="@font/montserrat_medium"
            android:textStyle="bold"
            android:textColor="@color/accent_dark" />

        <!-- Action Buttons: Group 1 - Shipped -->
        <LinearLayout
            android:id="@+id/groupShipped"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:fontFamily="@font/montserrat_medium"
            android:visibility="gone">

            <Button
                android:id="@+id/btnDelete"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:minHeight="40dp"
                android:paddingHorizontal="16dp"
                android:text="Delete"
                android:textSize="12sp"
                android:background="@drawable/button_outline"
                android:fontFamily="@font/montserrat_medium"
                android:textColor="@color/outline_text" />

            <Button
                android:id="@+id/btnBuyAgain"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:minHeight="40dp"
                android:paddingHorizontal="16dp"
                android:layout_marginStart="8dp"
                android:text="Buy Again"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:fontFamily="@font/montserrat_medium"
                android:background="@drawable/button_filled" />
        </LinearLayout>

        <!-- Action Buttons: Group 2 - To Receive -->
        <LinearLayout
            android:id="@+id/groupToReceive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <Button
                android:id="@+id/btnOrderReceived"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:minHeight="40dp"
                android:paddingHorizontal="16dp"
                android:text="Order Received"
                android:textSize="12sp"
                android:enabled="false"
                android:textColor="#C4C4C4"
                android:fontFamily="@font/montserrat_medium"
                android:background="@drawable/button_disabled"/>

            <Button
                android:id="@+id/btnTrackOrder"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:minHeight="40dp"
                android:paddingHorizontal="16dp"
                android:layout_marginStart="8dp"
                android:text="Track Order"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:fontFamily="@font/montserrat_medium"
                android:background="@drawable/button_filled" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
